@model TodoViewModel;
@using Humanizer;

@{
    ViewData["Title"] = "todo list";


}

<div class="panel panel-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>&#x2714</td>
                <td>Item</td>
                <td>Due</td>
            </tr>
        </thead>
        @foreach(var item in Model.Items)
        {
            <tr>
                <td>
                    <input type="checkbox" value="true" class="done-checkbox"  name="@item.Id" />
                </td>
                <td>@item.Title</td>
                <td>@item.DueAt.Humanize()</td>
            </tr>

        }
    </table>

    <div class="panel-footer add-item-form">
        <form>
            <div id="add-item-error" class="text-danger"></div>
            <label for="add-item-title">Add a new item:</label>
            <input id="add-item-title" />
            <button id="add-item-button" type="button">Add</button>
        </form>
    </div>
</div>